{
  "version": "0.2.0",
  "configurations": [

    
    {
      "name": "C++: Debug Active File",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false, // turn it to false from true to stop debugging
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,  // make it "true" if you want external terminal to be open everytime you run program instead of internal terminal of vs code.
      "MIMode": "gdb",
      "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "C/C++: g++.exe build active file"
    }
  ]
}
